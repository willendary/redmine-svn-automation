{
  "manifest_version": 3,
  "name": "Sky SVN Automation",
  "version": "1.3",
  "description": "Cria branch SVN pelo Redmine e Gerencia Tempo",
  "permissions": ["activeTab", "storage"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://redmine.skyinformatica.com.br/issues/*",
        "*://redmine.skyinformatica.com.br/my/page",
        "*://redmine.skyinformatica.com.br/projects/*/issues*",
        "*://redmine.skyinformatica.com.br/time_entries*"
      ],
      "js": [
        "src/estilos.js",
        "src/api_redmine.js",
        "src/relogio_sky.js",
        "src/principal.js"
      ]
    }
  ]
}